<?xml version="1.0"?>
            <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.ha.entity.model.domain.EmployeeAllowance" table="employeeallowance">
        <id name="employeeAllowanceDid"
                    column="employeeallowancedid"
                    type="java.lang.Long">
                    <generator class="increment"/>
        </id>

        <property name="employeeDid"
                    column="employeedid"
                    type="java.lang.Long"
                    />
        <property name="allowanceTypeDid"
                    column="allowancetypedid"
                    type="java.lang.Long"
                    />
        <property name="amount"
                    column="amount"
                    type="java.math.BigDecimal"
                    />
    </class>

</hibernate-mapping>

